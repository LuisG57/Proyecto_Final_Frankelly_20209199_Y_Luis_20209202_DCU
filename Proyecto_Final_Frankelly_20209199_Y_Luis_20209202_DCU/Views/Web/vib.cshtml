@model IEnumerable<EntityLayer.User>

@{
    ViewBag.Title = "Decaimiento";


}
<hr />
<h2 class="text-center">Decaimiento</h2>
<hr />
<br />
<h3 class="text-center">Por favor responde a las siguientes preguntas</h3>
<br />
<br />
<table class="table">
    <tr>
        <th>
            Pregunta
        </th>
        <th>
            No
        </th>
        <th>
            Casi nada
        </th>
        <th>
            Mas o menos
        </th>
        <th>
            Si
        </th>
        <th>
            Mucho
        </th>
    </tr>
    @{

        string[] preguntas = new string[] { "Vision borrosa", "mareos", "confusion repentina", "sentimiento de debilidad fisica (poca fuerza)", "poca capacidad de concentracion" };

    }

    @for (int i = 0; i < 5; i++)
    {
        <tr>
            <td>
                <label>@preguntas[i]</label>
            <td>
                <input type="radio" name="@i" />
                <label>&nbsp; 1</label>
            </td>
            <td>
                <input type="radio" name="@i" />
                <label>&nbsp; 2</label>
            </td>
            <td>
                <input type="radio" name="@i" />
                <label>&nbsp; 3</label>
            </td>
            <td>
                <input type="radio" name="@i" />
                <label>&nbsp; 4</label>
            </td>
            <td>
                <input type="radio" name="@i" />
                <label>&nbsp; 5</label>
            </td>
        </tr>

    }
</table>
<br />
<hr />
@Html.ActionLink("Continuar", "vibresults", null, new { @class = "btn btn-info btn-block" })
<hr />